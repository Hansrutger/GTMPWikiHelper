        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <RichTextBox Name="CodeBox" HorizontalAlignment="Left" Height="135" Margin="100,149,0,0" VerticalAlignment="Top" Width="313">
